<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_gemain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.softark.eddie.gasexpress.GEMainActivity">

    <ImageView
        android:id="@+id/main_activity_logo"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/brand_logo" />

    <TextView
        android:id="@+id/our_distributor_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_activity_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16sp"
        android:text="Delivers"
        android:textColor="@color/colorPrimary" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/distr_list"
        android:layout_below="@+id/our_distributor_text"
        android:layout_marginTop="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/ge_center_menu"
        android:src="@drawable/logo"
        android:background="@drawable/center_menu"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"
        android:layout_width="45dp"
        android:layout_height="45dp" />

    <ImageButton
        android:id="@+id/ge_center_menu_order"
        android:src="@drawable/order_gas"
        android:background="@drawable/center_menu"
        android:layout_toLeftOf="@+id/ge_center_menu"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"
        android:layout_marginBottom="52dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="32dp"
        android:layout_height="32dp" />

    <ImageButton
        android:id="@+id/ge_center_menu_prices"
        android:src="@drawable/gas_location"
        android:background="@drawable/center_menu"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/ge_center_menu"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"
        android:layout_width="32dp"
        android:layout_height="32dp" />

    <ImageButton
        android:id="@+id/ge_center_menu_summary"
        android:src="@drawable/track"
        android:background="@drawable/center_menu"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/ge_center_menu"
        android:scaleType="centerCrop"
        android:layout_marginBottom="52dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_width="32dp"
        android:layout_height="32dp" />

</RelativeLayout>
