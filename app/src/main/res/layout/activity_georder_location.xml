<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_georder_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.softark.eddie.gasexpress.GELocation">

    <TextView
        android:id="@+id/search_location"
        android:layout_width="match_parent"
        android:padding="4dp"
        android:gravity="center"
        android:text="Select delivery point"
        android:layout_margin="8dp"
        android:background="@drawable/edittext_wrapper"
        android:layout_height="wrap_content" />

    <fragment xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/my_location_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_location" />

    <Button
        android:id="@+id/select_place_button"
        android:layout_width="match_parent"
        android:onClick="setResult"
        android:text="Done"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

</RelativeLayout>
