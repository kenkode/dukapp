<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/ge_login_logo"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/gx_launcher_circle"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/login_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ge_login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Please provide your phone number"
        android:textColor="@color/colorPrimary" />

    <net.rimoto.intlphoneinput.IntlPhoneInput
        android:id="@+id/login_customer_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_message"
        android:layout_marginTop="32sp"
        android:gravity="center"
        android:inputType="phone"
        android:theme="@style/EditTextStyle"
        app:flagPaddingBottom="4sp"
        app:flagPaddingEnd="4sp"
        app:flagPaddingStart="4sp"
        app:flagPaddingTop="4sp"
        app:textSize="16sp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_customer_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:tint="@android:color/white"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@drawable/arrow_forward" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:text="Welcome to Gas Express"
        android:textColor="@android:color/black" />


</RelativeLayout>
